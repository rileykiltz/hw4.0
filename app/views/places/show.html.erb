<div class="container">
  <h1><%= @place["name"] %></h1>

  <h2>My Entries</h2>
  <% for entry in @entries %>
    <div class="entry">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
    </div>
  <% end %>

  <% if current_user %>
    <p>
      <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
    </p>
  <% end %>

  <p>
    <a href="/places" class="btn btn-secondary">Back to All Places</a>
  </p>
</div>