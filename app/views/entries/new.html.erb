<%= form_with(model: @entry, local: true, class: "form") do |form| %>
  <%= form.hidden_field :place_id, value: params[:place_id] %>

  <div class="form-group">
    <%= form.label :title, "Title", for: "title_input" %>
    <%= form.text_field :title, id: "title_input", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description", for: "description_input" %>
    <%= form.text_area :description, id: "description_input", class: "form-control", rows: 4 %>
  </div>

  <div class="form-group">
    <%= form.label :occurred_on, "Occurred On", for: "occurred_on_input" %>
    <%= form.date_field :occurred_on, id: "occurred_on_input", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :uploaded_image, "Upload Image", for: "uploaded_image_input", class: "form-label" %>
    <%= form.file_field :uploaded_image, id: "uploaded_image_input", class: "form-control" %>
  </div>

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>